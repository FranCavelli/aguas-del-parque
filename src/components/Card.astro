---
interface Props {
  icon: string;
  title: string;
  description: string;
}

const { icon, title, description } = Astro.props;
---

<div class="w-1/4 p-4 rounded-md">
    <div class="flex items-center justify-center">
        <img src={icon} alt="" class="w-20 h-20" />
    </div>
    <h3 class="text-2xl font-semibold text-center mt-4">{title}</h3>
    <p class="text-center mt-2">{description}</p>
</div>