---
import products from '../data/products.json';

import Product from './Product.astro';
---
<section class="">
  <div class="w-full relative flex flex-col" id="section3">
    <div class="flex flex-col relative bg-blue-100 pb-40">
      <div class="w-full -mt-20">
        <h2 class="text-center text-4xl font-semibold">Productos</h2>
        <div class="w-full px-30 flex gap-2 mt-8 justify-center">
          {products.map((product, index) => (
            <Product index={index} product={product}/>
          ))}
        </div>
      </div>
    </div>
  </div>
</section>

<style>

  img {
    position: relative;
    z-index: 5;
  }
</style>
